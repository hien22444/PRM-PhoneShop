<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature_admin_main.AdminMainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/admin_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/admin_bottom_navigation"
        app:defaultNavHost="true"
        app:navGraph="@navigation/admin_nav_graph" /> <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/admin_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/admin_bottom_nav_menu" /> </RelativeLayout>