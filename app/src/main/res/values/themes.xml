<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PhoneShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/gradient_end</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_color</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Toolbar theme -->
        <item name="toolbarStyle">@style/Widget.PhoneShop.Toolbar</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.PhoneShop.Button</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.PhoneShop.CardView</item>
        
        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.PhoneShop.BottomNavigation</item>
    </style>

    <style name="Theme.PhoneShop" parent="Base.Theme.PhoneShop" />

    <!-- Custom Toolbar Style -->
    <style name="Widget.PhoneShop.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PhoneShop.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.PhoneShop.Toolbar.Title</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:elevation">4dp</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="ThemeOverlay.PhoneShop.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorOnSurface">@color/text_white</item>
        <item name="android:textColorPrimary">@color/text_white</item>
    </style>

    <style name="TextAppearance.PhoneShop.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.PhoneShop.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.PhoneShop.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.PhoneShop.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_unselected</item>
        <item name="itemTextColor">@color/bottom_nav_selected</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/surface_color</item>
        <item name="elevation">8dp</item>
    </style>
</resources>