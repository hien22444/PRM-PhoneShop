<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- BẮT BUỘC SỬA: Thay đổi parent từ MaterialComponents (M2) sang Material3 (M3) -->
    <style name="Theme.Phoneshop" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- PRIMARY COLORS (M3 uses primary/secondary/tertiary) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorTertiary">@color/teal_700</item> <!-- Dùng tạm màu teal cho Tertiary -->

        <!-- BACKGROUND / SURFACE COLORS (Cần cho Dashboard M3) -->
        <!-- Đã thêm các thuộc tính màu M3 cần thiết cho Dashboard hoạt động -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceContainer">#F3F3F3</item> <!-- Màu nền cho Card/Container nhẹ -->
        <item name="colorSurfaceContainerHigh">#E0E0E0</item> <!-- Màu cho Toolbar/Header -->
        <item name="colorOutlineVariant">#DCDCDC</item> <!-- Màu cho đường viền Card -->

        <!-- Các thuộc tính hệ thống khác -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Các style custom không cần sửa -->
    <style name="DashboardCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DashboardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DashboardLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DashboardValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>